{
    "compilerOptions": {
        "lib": [
            "ES2018"
        ],
        "module": "CommonJS",
        "target": "ES2018",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": [
            "@types/node",
            "@types/mocha"
        ],
        "typeRoots": [
            "./node_modules/@types",
        ]
    },
    "include": [
        "**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "build",
        "cache",
        "artifacts"
    ]
}